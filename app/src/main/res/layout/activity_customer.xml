<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.customer.CustomerActivity"
    >

    <!--Fragment will be here-->
    <FrameLayout
        android:id="@+id/customer_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/customer_tab_layout"
        />

    <!--Tab Layout-->
    <RelativeLayout
        android:id="@+id/customer_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            >

            <!--customer tab-->
            <TextView
                android:id="@+id/btn_main_home"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/customer_tab_home"
                />

            <TextView
                android:id="@+id/btn_main_search"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/customer_tab_surplus"
                />

            <TextView
                android:id="@+id/btn_main_add"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/customer_tab_payment"
                />

            <TextView
                android:id="@+id/btn_main_news"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/customer_tab_setting"
                />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
